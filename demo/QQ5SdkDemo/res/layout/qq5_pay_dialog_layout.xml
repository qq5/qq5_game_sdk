<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qq5_white_100"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/qq5_green"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/qq5_pay_center"
            android:textColor="@color/qq5_white_98"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="32dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/qq5_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qq5_goods_account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/qq5_white_86" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="32dp"
            android:text="@string/qq5_pay_type"
            android:textColor="@color/qq5_white_74"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingLeft="28dp"
            android:paddingRight="32dp">

            <com.qq5sdk.base.HorizontalListView
                android:id="@+id/qq5_pay_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">
            </com.qq5sdk.base.HorizontalListView>

            <!--<ImageView-->
                <!--android:id="@+id/qq5_pay_type_1"-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:padding="4dp" />-->

            <!--<ImageView-->
                <!--android:id="@+id/qq5_pay_type_2"-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="24dp"-->
                <!--android:padding="4dp"/>-->

            <!--<ImageView-->
                <!--android:id="@+id/qq5_pay_type_3"-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="24dp"-->
                <!--android:padding="4dp"-->
                <!--android:visibility="invisible"/>-->
        </LinearLayout>


        <TextView
            android:id="@+id/qq5_pay_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@color/qq5_green"
            android:gravity="center"
            android:text="@string/qq5_pay_button"
            android:textColor="@color/qq5_white_98"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qq5_pay_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="32dp"
            android:text="@string/qq5_pay_question"
            android:textColor="@color/qq5_green"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>